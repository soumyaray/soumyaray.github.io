h1.section_title Awards
.row
  - awards = data.achievements.awards
  - awards.count.times do |count|
    .col-sm-12
      div class="card"
        div class="panel panel-default"
          div class="panel-heading"
            h2.card-title
              = awards[count].name
          div class="panel-body"
            ul.bullet-free
              - awards[count].instances.each do |instance|
                li #{instance}
h1.section_title Grants
.row
  - grants = data.achievements.grants
  - grants.count.times do |count|
    .col-sm-12
      div class="card"
        div class="panel panel-default"
          div class="panel-heading"
            h2.card-title
              = grants[count].name
          div class="panel-body"
            ul.bullet-free
              - grants[count].instances.each do |instance|
                li 
                  span #{instance.duration} : #{instance.project}
                  br
                  span.casual Grant ID: #{instance.id}
